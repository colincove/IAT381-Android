package com.example.assignment03;

public class ObjMesh {
	private ObjData meshData;
	private float[] glFaces;
	public ObjMesh(ObjData meshData) {
		this.meshData=meshData;
	}
	public float[] getGlFaces(){
		return glFaces;
	}
	private float[] getGLFaces(){
		float[] result = new float[fSize*3];
		for(int i=0;i<fSize;i++){
			result[i*3]=faces[i][0];
			result[i*3+1]=faces[i][1];
			result[i*3+2]=faces[i][2];
		}
		return result;
	}
}
